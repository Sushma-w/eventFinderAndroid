<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:orientation="vertical"
    android:paddingBottom="24dp">

    <!-- Event Search Header Row -->
    <LinearLayout
        android:id="@+id/layoutEventSearchHeader"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:background="?attr/colorSecondaryContainer"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="12dp"
            android:text="Event Search"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageSearchIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:contentDescription="Search"
            android:src="@android:drawable/ic_menu_search"
            android:tint="?attr/colorOnSecondaryContainer" />

    </LinearLayout>

    <!-- Date Row -->
    <TextView
        android:id="@+id/textDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:textColor="?attr/colorPrimary"
        android:textSize="14sp" />

    <!-- Favorites Label -->
    <TextView
        android:id="@+id/textFavorites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurfaceContainerLow"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="@string/home_favorites_label"
        android:textColor="?attr/colorOnSurface"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/containerFavorites"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- Empty state container -->
            <LinearLayout
                android:id="@+id/layoutEmptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <!-- Empty state -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:cardBackgroundColor="?attr/colorSecondaryContainer"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp">

                    <TextView
                        android:id="@+id/textEmptyState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingVertical="16dp"
                        android:text="@string/home_no_favorites"
                        android:textColor="?attr/colorOnSecondaryContainer"
                        android:textSize="16sp" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Favorites Recycler -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerFavorites"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="0dp"
                tools:itemCount="0" />

        </FrameLayout>

        <!-- Powered by Ticketmaster (right below favorites list) -->
        <TextView
            android:id="@+id/textPoweredBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:fontFamily="sans-serif-medium"
            android:focusable="true"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="@string/home_powered_by"
            android:textColor="?attr/colorPrimary"
            android:textSize="13sp" />

    </LinearLayout>

</LinearLayout>
